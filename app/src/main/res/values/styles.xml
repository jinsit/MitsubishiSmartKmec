    </style>
    -->

    <style name="day">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:background">@drawable/border_day</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="yoil" parent="day">
        <item name="android:background">@drawable/border_yoil</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="yoil_sun" parent="yoil">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="yoil_sat" parent="yoil">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="picture_area">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:background">@drawable/border_day</item>
        <item name="android:height">@dimen/comm_btn_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="picture" parent="picture_area">
        <item name="android:background">@color/comm_popup_title_bg</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

