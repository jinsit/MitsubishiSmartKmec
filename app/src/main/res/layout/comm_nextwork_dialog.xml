<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/comm_popup_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/comm_popup_default_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/comm_popup_default_margin"
        android:layout_marginRight="@dimen/comm_popup_default_margin"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dialogMessage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_listitem1_height"
            android:gravity="center"
            android:text="Medium Text"
                android:textSize="@dimen/comm_textitem_66Size" />

        <LinearLayout
            android:layout_width="match_parent"   android:layout_marginLeft="@dimen/comm_default_topHalfMargin"
                android:layout_marginRight="@dimen/comm_default_topHalfMargin"
            android:layout_height="wrap_content" android:layout_marginBottom="@dimen/comm_default_topHalfMargin"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_wo_dialog_nextCar" android:layout_marginTop="@dimen/comm_default_topHalfMargin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comm_listitem1_height"
                android:background="@drawable/btn"
                android:gravity="center"
                android:text="다음호기 이동" />

            <Button
                android:id="@+id/btn_wo_dialog_cunsumerCounsel"
                android:layout_width="match_parent" android:layout_marginTop="@dimen/comm_default_topHalfMargin"
                android:layout_height="@dimen/comm_listitem1_height" 
                android:layout_gravity="center"
                android:background="@drawable/btn"
                android:gravity="center"
                android:text="고객상담" />

            <Button
                android:id="@+id/btn_wo_dialog_etc"
                android:layout_width="match_parent" android:layout_marginTop="@dimen/comm_default_topHalfMargin"
                android:layout_height="@dimen/comm_listitem1_height"
                android:layout_gravity="center"
                android:background="@drawable/btn"
                android:gravity="center"
                android:text="기타" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>