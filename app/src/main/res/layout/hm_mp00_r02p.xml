<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:minHeight="@dimen/comm_popup_default_height"
    android:background="@color/comm_bg">
    <include layout="@layout/comm_dialog_title_bar" />

    <LinearLayout
        android:layout_width="match_parent" android:weightSum="10"
        android:layout_height="match_parent"
        android:minHeight="@dimen/comm_popup_default_height"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_saveDrive"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:scaleType="fitXY"
           />

        <TextView
            android:id="@+id/tv_safeDriveRmk" 
            android:layout_width="match_parent" 
             android:layout_height="0dp" android:layout_weight="1" 
            android:gravity="center" android:background="#ffffff"
            
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
 		<Button
                android:id="@+id/btn_safeDriveConfirm"
                android:layout_width="match_parent"  android:layout_weight="1" 
                android:layout_height="0dp"
             	style="@style/btntext"
                android:background="@drawable/btn" android:text="확인하였습니까?"
                android:gravity="center" android:layout_gravity="bottom"
                android:paddingLeft="@dimen/comm_small_attendantsMargin"
                android:paddingRight="@dimen/comm_small_attendantsMargin" />
    </LinearLayout>

    
</LinearLayout>
