<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comm_listitem1_height"
    android:layout_marginLeft="@dimen/comm_listitem_margin"
    android:layout_marginRight="@dimen/comm_listitem_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_listitem1_height"
        android:layout_marginLeft="@dimen/comm_listitem_margin"
        android:layout_marginRight="@dimen/comm_listitem_margin" >

        <TextView
            android:id="@+id/tv_wo_adapter_gradeNm"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_wo_adapter_clientNm"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_wo_adapter_mailAddr"
            style="@style/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>