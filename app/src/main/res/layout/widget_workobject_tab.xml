<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LL_Tabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_bottom_tab_height"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="8" >

        <Button
            android:id="@+id/btn_tabWT" android:layout_weight="2"
            android:layout_width="0dip"  android:background="@drawable/wo_tab_menu01_off"
            android:layout_height="match_parent"
             />

        <Button
            android:id="@+id/btn_tabPL" android:layout_weight="2"
            android:layout_width="0dip" android:background="@drawable/wo_tab_menu02_off"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/btn_tabCL" android:layout_weight="2"
            android:layout_width="0dip" android:background="@drawable/wo_tab_menu03_off"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/btn_tabWC" android:layout_weight="2"
            android:layout_width="0dip" android:background="@drawable/wo_tab_menu04_off"
            android:layout_height="match_parent"
             />

    </LinearLayout>

</LinearLayout>