<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/comm_dialog_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/tv_text180firstbg">

        <EditText
            android:id="@+id/et_cm_searchBox"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginLeft="@dimen/comm_small_attendantsMargin"
            android:ems="10" />

          <TextView
            android:id="@+id/btn_cm_searchBldg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_inquery"
            android:layout_gravity="center" 
            android:paddingLeft="4dp"
            android:layout_marginRight="@dimen/comm_small_attendantsMargin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@+id/lv_cm_searchList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ExpandableListView>
    </LinearLayout>
    
    <TextView
        style="@style/mosttext"  android:gravity="center"
        android:id="@+id/btn_cm_ok"   android:background="@drawable/btn"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:text="확 인"/>
</LinearLayout>