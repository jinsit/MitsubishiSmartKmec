<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/comm_exlist_childBG"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_listitem1_height"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            
            android:src="@drawable/sm_gm_massage_icon" />

        <TextView
            android:id="@+id/tv_deptSubject"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="left|center"
            android:singleLine="true" android:textColor="@color/comm_boldFont_color"
            android:text="Large Text"
            android:textSize="@dimen/comm_textitem_56Size" />

        <ImageView
            android:id="@+id/ibtn_deptDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sm_gm_delete_icon" />
    </LinearLayout>

</LinearLayout>