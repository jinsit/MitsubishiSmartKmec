<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/comm_exlist_childBG"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/ll_wt_checkList"
        android:layout_height="@dimen/comm_listitem2_height" android:background="@color/comm_exlist_childBG"
        android:layout_marginLeft="@dimen/comm_listitem_margin"
        android:layout_marginRight="@dimen/comm_listitem_margin"
        android:weightSum="10" >

        <TextView
            android:id="@+id/tv_wt_checkNm"
            android:layout_width="0dip" android:textSize="@dimen/comm_textitem_48Size"
            android:layout_height="match_parent"
            android:layout_weight="6" android:textColor="@color/comm_boldFont_color"
            android:gravity="left|center"
            android:text="TextView" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" >

            <ImageView
                android:id="@+id/iv_wt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/a_on" />

            <TextView
                android:id="@+id/et_wt_numeric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/iv_wt_status"
                android:background="@drawable/tv_inquerydate"
                android:inputType="number" android:gravity="center" 
                android:visibility="invisible" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/cb_wt_holdOver" android:layout_weight="1" android:visibility="gone"
            android:layout_width="0dp" android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>
  
         
    <TextView
        android:id="@+id/tv_wt_rmk"
          android:layout_width="match_parent" android:textSize="@dimen/comm_textitem_48Size"
            android:layout_height="wrap_content"
            android:textColor="@color/comm_boldFont_color"   android:layout_marginLeft="@dimen/comm_listitem_margin"
        android:layout_marginRight="@dimen/comm_listitem_margin"
            android:gravity="left|center"
            android:text="TextView" />

</LinearLayout>