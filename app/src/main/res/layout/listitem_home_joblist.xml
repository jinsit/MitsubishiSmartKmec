<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout  
        android:layout_width="match_parent" android:orientation="horizontal"
            android:layout_marginRight="@dimen/comm_default_attendantsMargin"
        android:layout_height="@dimen/comm_listitem1_height" >

        <ImageView
            android:id="@+id/iv_home_jobDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center"
            android:src="@drawable/division_breakdown" />

        <TextView
            android:id="@+id/tv_home_bldgNm"
            android:layout_width="0dip" android:layout_weight="3"
            android:layout_height="wrap_content" android:layout_marginLeft="@dimen/comm_default_topHalfMargin"
            android:layout_gravity="center"
            android:text="Large Text" android:singleLine="true"
            android:textColor="@color/comm_boldFont_color"
            android:textSize="@dimen/comm_listitem_bold_fontSize"
             />
        
        <TextView
            android:id="@+id/tv_home_workNm"
            android:layout_width="0dip"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:layout_gravity="center" android:singleLine="true"
            android:gravity="right"
            android:text="Medium Text"
            android:textColor="@color/comm_popup_title_fontColor"
            android:textSize="@dimen/comm_listitem_bold_fontSize"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>