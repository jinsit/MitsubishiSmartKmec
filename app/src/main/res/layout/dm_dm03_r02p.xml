<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_popup_bg"
    android:orientation="vertical" >

 
    <include layout="@layout/comm_dialog_title_bar" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_textfirstlinebg" />
            
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130firstbg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	        android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="성명" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0302_empNm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
            android:layout_marginRight="@dimen/comm_default_attendantsMargin" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="종류" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0302_attenCdNm"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:layout_weight="10"
                android:gravity="center_vertical" />
        </LinearLayout>
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="일자" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0302_attendDt" android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical" />
        </LinearLayout>
        
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg">

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="비고" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0302_rmk" android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"/>
        </LinearLayout>
        
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_textlastlinebg" />
    
    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip" android:layout_weight="1"
                    android:layout_height="match_parent" android:layout_marginRight="2sp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/btn_dm_approve"
                        style="@style/mosttext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comm_default_topMargin"
                        android:background="@drawable/btn"
                        android:gravity="center"
                        android:text="승인" />

                    <TextView
                        android:id="@+id/btn_dm_cancelApproval"
                        style="@style/mosttext" 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comm_default_topMargin"
                        android:background="@drawable/btn"
                        android:gravity="center"
                        android:text="승인취소" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_dm_reject"
                    style="@style/mosttext" android:layout_marginLeft="2sp"
                      android:layout_width="0dip" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comm_default_topMargin"
                    android:background="@drawable/btn"
                    android:gravity="center"
                    android:text="거절" />

     </LinearLayout>
   
</LinearLayout>