<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/lv_bg180arrow"
        android:paddingLeft="@dimen/comm_listitem_margin"
        android:paddingRight="@dimen/comm_listitem_margin"
        >

        <TextView
            style="@style/text"
            android:id="@+id/tv01_is_adapter02_bldgNm"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="bldgNm"
            android:layout_weight="7"
            android:layout_gravity="center_vertical"
            />

        <TextView
            style="@style/text"
            android:id="@+id/tv02_is_adapter02_endVal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="endVal"
            android:layout_weight="2.5"
            android:layout_gravity="center_vertical"
            />

        <TextView
            style="@style/text"
            android:id="@+id/tv03_is_adapter02_figures"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text=""
            
            android:layout_weight="0.5"  
            android:layout_gravity="center_vertical"         
            />

    </LinearLayout>

</LinearLayout>
