<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comm_listitem4_height"
    android:background="@drawable/lv_bg350" >

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="@dimen/comm_listitem4_height"
    android:layout_weight="1"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/comm_listitem_margin"
    android:layout_marginRight="@dimen/comm_listitem_margin"
    android:layout_weight="1" >

    <TextView
        style="@style/text"
        android:id="@+id/tv_pi_adapter_itemNm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Medium Text"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/comm_listitem_margin"
    android:layout_marginRight="@dimen/comm_listitem_margin"
    android:layout_weight="1" >

    <TextView
        style="@style/text"
        android:id="@+id/tv_pi_adapter_itemNo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Medium Text"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/comm_listitem_margin"
    android:layout_marginRight="@dimen/comm_listitem_margin"
    android:layout_weight="1" >

    <TextView
        style="@style/text"
        android:id="@+id/tv_pi_adapter_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Medium Text" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/comm_listitem_margin"
    android:layout_marginRight="@dimen/comm_listitem_margin"
    android:layout_weight="1" >

    <TextView
        style="@style/text"
        android:id="@+id/tv_pi_adapter_unitPrc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Medium Text"/>
</LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/comm_listitem4_height" >

    <TextView
        android:id="@+id/btn_pi_adapter_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:focusable="false"
        android:background="@drawable/btn_picture" />

</LinearLayout>
</LinearLayout>