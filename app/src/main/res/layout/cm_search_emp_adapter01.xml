<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:background="@drawable/lv_bg180arrow"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"  android:layout_marginLeft="@dimen/comm_listitem_margin"
    android:layout_marginRight="@dimen/comm_listitem_margin"
       android:layout_height="@dimen/comm_listitem1_height"
        android:weightSum="10" >

        <TextView
            android:id="@+id/tv01_cm_deptNm"
            android:layout_width="0dip" android:textSize="@dimen/comm_listitem_default_fontSize"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="deptNm"
            />

        <TextView
            android:id="@+id/tv02_cm_empNm"
            android:layout_width="0dip" android:textSize="@dimen/comm_listitem_default_fontSize"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="left|center"
            android:maxLines="1"
            android:text="empNm"
             />
        
        <TextView
            android:id="@+id/tv03_cm_workNm"
            android:layout_width="0dip" android:textSize="@dimen/comm_listitem_default_fontSize"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="right|center"
            android:maxLines="1"
            android:text="workNm"
             />
    </LinearLayout>

</LinearLayout>