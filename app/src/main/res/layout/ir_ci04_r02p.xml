<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_popup_bg"
    android:orientation="vertical" >

    <include layout="@layout/comm_dialog_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_textfirstlinebg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130firstbg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="아이템 No" />

            <TextView
                android:id="@+id/tv_ci_itemNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:layout_weight="10"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="아이템명" />

            <TextView
                android:id="@+id/tv_ci_itemNm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:layout_weight="10"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="규격" />

            <TextView
                android:id="@+id/tv_ci_size"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:layout_weight="10"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="가격" />

            <TextView
                android:id="@+id/tv_ci_unitPrc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:layout_weight="10"
                android:gravity="center_vertical" />
        </LinearLayout>
        
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_text130bg" >

                <TextView
                    style="@style/colortext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="사진" />

                <TextView
                    android:id="@+id/btn_ci_image"
                    android:layout_width="0dip" android:layout_marginTop="@dimen/comm_default_topMargin"
                    android:layout_marginBottom="@dimen/comm_default_topMargin"
                    android:layout_height="wrap_content" android:background="@drawable/btn_nophoto"
                    android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:text="사진보기"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/comm_boldFont_color"
                    android:textSize="@dimen/comm_textitem_56Size" />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>