<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_exlist_topTitleBG"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_listitem2_height"
        android:orientation="vertical"
        android:weightSum="10" >

        <TextView
            android:id="@+id/tv_ri02_r01HeadTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_textitem110_height"
            android:layout_marginLeft="@dimen/comm_listitem_margin"
            android:layout_marginRight="@dimen/comm_listitem_margin"
            android:gravity="center"
            android:singleLine="true"
            android:text="Large Text"
            android:textColor="@color/comm_boldFont_color"
            android:textSize="@dimen/comm_textitem_60Size" />

        <TextView
         android:id="@+id/tv_ri02_r01SubTitle"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comm_textitem110_height"
            android:layout_marginLeft="@dimen/comm_listitem_margin"
            android:layout_marginRight="@dimen/comm_listitem_margin"
            android:gravity="center"
            android:singleLine="true"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>