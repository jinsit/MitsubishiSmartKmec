<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210sp" 
    android:orientation="vertical" 
    android:background="@color/comm_popup_bg"
    >
	<include layout="@layout/comm_dialog_title_bar" />    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3" >
        	<ImageView
            android:id="@+id/iv01_cr01_r01p" android:layout_weight="1"
            android:src="@drawable/btn_nopicture" android:layout_margin="1sp"
            android:layout_width="0dip"
            android:layout_height="@dimen/comm_img_height"
            android:contentDescription="사진1"
            />
        	<ImageView
            android:id="@+id/iv02_cr01_r01p"
            android:layout_width="0dip" android:layout_weight="1"
            android:layout_height="@dimen/comm_img_height"
            android:src="@drawable/btn_nopicture"  android:layout_margin="1sp"
            android:contentDescription="사진2"
            />
        	<ImageView
            android:id="@+id/iv03_cr01_r01p" android:layout_weight="1"
            android:layout_width="0dip" android:layout_margin="1sp"
            android:layout_height="@dimen/comm_img_height"
            android:src="@drawable/btn_nopicture" 
            android:contentDescription="사진3"
            />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btn01_cr01_r01p"
            style="?android:attr/buttonStyleSmall" android:background="@drawable/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="첨부완료" 
            
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>
