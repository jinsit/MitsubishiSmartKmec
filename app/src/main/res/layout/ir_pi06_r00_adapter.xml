<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comm_listitem2_height"
    android:background="@drawable/lv_bg350"
    android:orientation="horizontal"
    android:layout_weight="10">

    <LinearLayout
        android:layout_width="0dp" android:gravity="center"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/comm_listitem_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:id="@+id/tv_pi06_seq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SEQ"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_pi06_carNo"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:text="CarNo" />
            <TextView
                android:id="@+id/tv_pi06_itemNm"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="Item Nm"
                android:textColor="@color/comm_popup_title_fontColor"
                android:textSize="@dimen/comm_listitem_bold_fontSize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_pi06_itemNo"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"

                android:text="ItemNo"
                android:textColor="@color/comm_boldFont_color"
                android:textSize="@dimen/comm_listitem_bold_fontSize"
                />

            <TextView
                android:id="@+id/tv_pi06_size"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Size"
                android:textColor="@color/comm_boldFont_color"
                android:textSize="@dimen/comm_listitem_bold_fontSize"
                />

            <TextView
                android:id="@+id/tv_pi06_drawNo"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="DrawNo"
                android:textColor="@color/comm_boldFont_color"
                android:textSize="@dimen/comm_listitem_bold_fontSize"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10" >

            <TextView
                android:id="@+id/tv_pi06_unitPrice"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="UnitPirce"
                android:textColor="@color/comm_boldFont_color"
                android:textSize="@dimen/comm_listitem_bold_fontSize"
                />

            <TextView
                android:id="@+id/tv_pi06_qty"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Qty"
                android:textColor="@color/comm_boldFont_color"
                android:textSize="@dimen/comm_listitem_bold_fontSize"
                />

            <TextView
                android:id="@+id/tv_pi06_amount"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="Amount"
                android:textColor="@color/comm_boldFont_color"
                android:textSize="@dimen/comm_listitem_bold_fontSize"
                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp" android:gravity="center"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <Button
            android:id="@+id/btn_changeQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="수량변경" />
    </LinearLayout>

</LinearLayout>