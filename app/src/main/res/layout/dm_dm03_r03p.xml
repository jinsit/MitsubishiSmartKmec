<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_popup_bg"
    android:orientation="vertical" >

 
    <include layout="@layout/comm_dialog_title_bar" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_textfirstlinebg" />
            
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130firstbg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	        android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="성명" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0303_empNm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
            android:layout_marginRight="@dimen/comm_default_attendantsMargin" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="작업구분" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0303_workNm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"   android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:gravity="center_vertical" />
        
        </LinearLayout>
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="건물명" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0303_bldgNm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"    android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:gravity="center_vertical|left" />
         
        </LinearLayout>
        
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg">

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="호기" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0303_carNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"    android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:gravity="center_vertical"/>
             
        </LinearLayout>
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="시간" />

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0303_totalOtTm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"  android:layout_marginRight="@dimen/comm_default_attendantsMargin"
                android:gravity="center_vertical"/>
       
        </LinearLayout>
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_text130bg" >

            <TextView
                style="@style/colortext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
       	    android:layout_marginLeft="@dimen/comm_default_attendantsMargin"
                android:text="비고"/>

            <TextView
                style="@style/text"
                android:id="@+id/tv_dm0303_rmk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical" 
            android:layout_marginRight="@dimen/comm_default_attendantsMargin"/>
        </LinearLayout>
        
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_textlastlinebg" />
            
        <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip" android:layout_weight="1"
                    android:layout_height="match_parent" android:layout_marginRight="2sp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/btn_dm_approve"
                        style="@style/mosttext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comm_default_topMargin"
                        android:background="@drawable/btn"
                        android:gravity="center"
                        android:text="승인" />

                    <TextView
                        android:id="@+id/btn_dm_cancelApproval"
                        style="@style/mosttext" 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comm_default_topMargin"
                        android:background="@drawable/btn"
                        android:gravity="center"
                        android:text="승인취소" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_dm_reject"
                    style="@style/mosttext" android:layout_marginLeft="2sp"
                      android:layout_width="0dip" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comm_default_topMargin"
                    android:background="@drawable/btn"
                    android:gravity="center"
                    android:text="거절" />

     </LinearLayout>
    
    </LinearLayout>

   
</LinearLayout>