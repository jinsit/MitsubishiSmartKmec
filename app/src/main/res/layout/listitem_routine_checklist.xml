<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
        android:background="@drawable/lv_bg250"
    android:orientation="vertical" >

    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_listitem2_height"
        android:layout_marginLeft="@dimen/comm_listitem_margin"
        android:layout_marginRight="@dimen/comm_listitem_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="5" >

            <TextView
                android:id="@+id/tv_wo_routineBldgNm"
                android:layout_width="0dp" android:layout_weight="8"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:maxLines="2"
                android:text="Medium Text"
                android:textColor="@color/comm_defaultFont_color"
                android:textSize="@dimen/comm_listitem_default_fontSize" />
               
            <TextView
                android:id="@+id/tv_wo_routineICnt" android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:maxLines="1"
                android:text="Medium Text"
                android:textColor="@color/comm_defaultFont_color"
                android:textSize="@dimen/comm_listitem_default_fontSize" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_wo_routineEText"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="5"
            android:gravity="left|center"
            android:singleLine="true"
            android:text="Large Text"
            android:textColor="@color/comm_boldFont_color"
            android:textSize="@dimen/comm_listitem_bold_fontSize" />
     
    </LinearLayout>

</LinearLayout>